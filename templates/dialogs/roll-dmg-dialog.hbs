<div class="row flexrow table-header red">
    <div class="flex1 center">
        <h3>Jet de dommages</h3>
    </div>
</div>
{{> "systems/cog/templates/dialogs/parts/roll-dmg-fields.hbs"}}
<div class="row flexrow" style="margin-bottom: 10px;">
    <div class="flex1 center bg-darkslate">
        <span class="field-label">Dommages critiques ?</span>
    </div>
    <div class="flex1 center cell">
        <input class="field-value" id="isCritical" name="isCritical" type="checkbox" {{#if isCritical}}checked{{/if}}/>
    </div>
</div>
{{#if hasDescription}}
    <hr/>
    <div>
        <div class="flex1 center bg-darkslate">
            <span class="field-label">Description</span>
        </div>
        <textarea class="readonly rollDialogDescr" readonly="true" id="dmgDescr" name="dmgDescr">{{dmgDescr}}</textarea>
    </div>
{{/if}}
